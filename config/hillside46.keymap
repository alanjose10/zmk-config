// Layers
#define DEF_HRM_L       0
#define DEF_L           1
#define SYMBOL_L        2
#define NAV_L           3
#define SHORTCUTS_L     4
#define ADJ_L           5
#define SYSTEM_L        6

#include "shortcuts.dtsi"
