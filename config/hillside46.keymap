ZMK_CONDITIONAL_LAYER(adjust_layer, SHORTCUTS_L NAV_L, ADJ_L)
ZMK_CONDITIONAL_LAYER(system_layer, SYMBOL_L NAV_L, SYSTEM_L)

&mt {
    tapping-term-ms = <200>;
    quick-tap-ms = <175>;
};

&lt {
    tapping-term-ms = <220>;
    quick-tap-ms = <190>;
};

/ {
    behaviors {
        thumb_mt: mod_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <220>;
            quick-tap-ms = <190>;
            bindings = <&kp>, <&kp>;
            display-name = "Thumb-Mod-Tap";
        };
    };
};

